@model IEnumerable<CrudService.Models.Customer>

<h2 class="text-center mb-4">Customer List</h2>

<div class="container">
    <!-- Button to add new item -->
    <div class="text-end mb-3">
        <a asp-action="create" class="btn btn-success">Add Item</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Display Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.id</td>
                    <td>@customer.name</td>
                    <td>@customer.DisplayOrder</td>
                    <td class="text-center">
                        <!-- Edit Button -->
                        <a asp-action="Edit" asp-controller="Customer" asp-route-id="@customer.id" class="btn btn-warning btn-block mt-2">Edit</a>


                        <!-- Delete Button -->
                        <form action="@Url.Action("Delete", "Customer", new { id = customer.id })" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

